{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron">
{% if error is defined %}
    <div class="alert alert-dismissible alert-danger">
  <strong>Erreur!!</strong>{{error}}
</div>
{% else %}
  <h1>{{ meteo.getCity()|capitalize }} {{meteo.getTimeDay()}}</h1>
  <hr>
  <ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <img src="Assets/sun.png"alt="">{{meteo.getTemperatureDegree()}}°C
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
     Taux d'Humidité: {{meteo.getHumidity()}}
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Vitesse du vent: {{meteo.getWindSpeed()}}
  </li>
</ul>
{% endif %}
</div>
{% endblock %}
